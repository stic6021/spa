<section class="spa">
  <header class="spa-header">
    <h1>todos</h1>
  </header>

  <section class="spa-main">
    <ul class="todo-list">
    </ul>
  </section>
</section>

<script>
  $(document).ready(function() {
    $.get("/tasks").then(function(data) {
      var htmlString = "";
      $.each(data, function(index, task) {
        htmlString += '<li><div class="view"><input class="toggle" type="checkbox"' +
        (task.done ? "checked" : "") + '><label>' +
        task.title + '</label></div></li>';
      });
      $('.todo-list').html(htmlString);
    });
  });
</script>